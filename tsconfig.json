{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "outDir": "dist",
    "typeRoots" : ["src/infrastructure/@types", "./node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "transpileOnly": true,
  "exclude": [
    "**/node_modules/*"
  ]
}
